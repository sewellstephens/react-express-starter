{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": false,
      "noEmit": true,
      "incremental": true,
      "esModuleInterop": true,
      "module": "Node16",
      "moduleResolution": "Node16",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules"
    ]
  }